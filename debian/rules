#!/usr/bin/make -f

build: build-arch build-indep
build-arch:
build-indep: build-stamp
build-stamp:
	dh_testdir
	pandoc -s -w man -o rhinote.1 debian/rhinote.1.markdown
	touch $@

binary: binary-arch binary-indep
binary-arch: build-arch
binary-indep: build-indep
	dh_testdir
	dh_testroot
	dh_prep
	dh_install
	dh_installchangelogs
	dh_installdocs
	dh_installman
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	rm -f rhinote.1
	dh_clean

.PHONY: build build-arch build-indep binary binary-arch binary-indep clean
